{
  "compilerOptions": {
    "target": "ES6",
    "lib": ["ES2022", "DOM"],
    "jsx": "react",
    "module": "CommonJS",
    "types": ["chrome", "node"],
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": false,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "middleware"],
}
